# AIRS Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys
# =============================================================================

# FRED API Key (get from https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=your_fred_api_key_here

# Alpha Vantage API Key (get from https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=airs
POSTGRES_USER=airs
POSTGRES_PASSWORD=airs_dev_password

# Full database URL (constructed from above or override directly)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# MLflow Configuration
# =============================================================================

MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=airs-drawdown-prediction

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
AIRS_ENV=development

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Data directory for local file storage
DATA_DIR=./data

# =============================================================================
# API Server Settings
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# Airflow Configuration (if using)
# =============================================================================

AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/airflow
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here
